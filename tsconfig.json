{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "rootDir": "./",
    "module": "CommonJS",
    "target": "ES2021",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "src/*": ["*"]
    },
    "esModuleInterop": true,
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"]
}
